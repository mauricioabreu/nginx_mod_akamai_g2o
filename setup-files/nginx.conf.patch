         location / {
             root   html;
             index  index.html index.htm;
+
+            location /download {
+                g2o                   on;
+                g2o_nonce             "token";
+                g2o_key               "a_password";
+            }
+
+            location /allow_token1 {
+                g2o        on;
+                g2o_nonce  "token1";
+                g2o_key    "a_different_password";
