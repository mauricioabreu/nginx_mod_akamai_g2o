--- nginx-1.6.1/prefix/conf/nginx.conf.default	2019-03-28 17:43:10.000000000 -0300
+++ nginx-1.6.1/prefix/conf/nginx.conf	2019-03-28 17:47:57.000000000 -0300
@@ -1,3 +1,4 @@
+daemon off;
 
